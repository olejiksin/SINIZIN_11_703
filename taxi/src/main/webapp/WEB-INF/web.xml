<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.itis.Taxi.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PayServlet</servlet-name>
        <servlet-class>ru.itis.Taxi.servlets.PayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboutUsServlet</servlet-name>
        <servlet-class>ru.itis.Taxi.servlets.AboutUsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>ru.itis.Taxi.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegDriverServlet</servlet-name>
        <servlet-class>ru.itis.Taxi.servlets.RegDriverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/signIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegDriverServlet</servlet-name>
        <url-pattern>/regDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboutUsServlet</servlet-name>
        <url-pattern>/aboutUs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
</web-app>